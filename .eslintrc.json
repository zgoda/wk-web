{
  "extends": [
    "preact"
  ],
  "ignorePatterns": [
    "build/",
    "dist/"
  ],
  "rules": {
    "max-len": [
      "error",
      88,
      2
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always",
      {
        "omitLastInOneLineBlock": true
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ]
  }
}
